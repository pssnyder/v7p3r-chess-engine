rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Raw games collection - only Cloud Functions can write, read is restricted
    match /raw_games/{gameId} {
      allow read, write: if false; // Only server-side access via Admin SDK
    }
    
    // Game analytics collection - read access for authenticated users, write for functions only
    match /game_analytics/{gameId} {
      allow read: if request.auth != null; // Authenticated users can read analytics
      allow write: if false; // Only server-side access via Admin SDK
    }
    
    // Metrics collection - read access for authenticated users, write for functions only
    match /metrics/{metricId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side access via Admin SDK
    }
    
    // Models collection - read for authenticated users, write for functions only
    match /models/{modelId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side access via Admin SDK
    }
    
    // User data collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
